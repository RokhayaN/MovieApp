<h2>Edit a Movie </h2>

<%= render partial: '/errors', locals: { record: @movie } %>

<%= image_tag @movie.image%><br><br>

<%= form_for @movie do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br><br>
<%= f.label :genre %>
<%= f.text_field :genre %><br><br>
<%= f.label :release_year %><br>
<%= f.text_area :release_year%><br><br>
<%= f.submit "Edit Movie"  %>
<% end %>