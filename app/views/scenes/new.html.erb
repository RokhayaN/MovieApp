<h2> Add scene for actor <%= @actor.name %> </h2>

<%= form_for @scene do |f| %>
  <%= f.label :Movie %>
  <div><%= f.collection_select :movie_id, Movie.all, :id, :title, prompt: true %></div>
  <%= f.label :time %>
  <div><%= f.text_field :time %></div>
  <%= f.label :location%>
  <div><%= f.text_field :location %></div
  <%= f.hidden_field :actor_id, value: @actor.id %>
  <%= f.submit "Create Role" %>
<% end %>