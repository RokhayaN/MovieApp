<h2> Add a new scene <%= @actor.first_name %> </h2>

<%= form_for (@scenes)do |f|%>
  <%= f.label :Movie %>
  <div><%= f.collection_select :movie_id, Movie.all, :id, :title, prompt: true %></div>
  <%= f.label :time %>
  <div><%= f.text_field :time%></div>
  <%= f.label :location%>
  <div><%= f.text_field :location%></div>
  <%= f.label :acting %>
  <div><%= f.text_field :acting%></div>
  <%= f.hidden_field :actor_id, value: @actor.id %>
  <%= f.submit "Create Scene" %>
<% end %>